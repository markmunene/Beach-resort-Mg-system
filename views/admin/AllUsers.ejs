<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AllUsers</title>
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.7/css/all.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
</head>
<body>
    <div class="container">
       <div class="card">
        <div class="card-header" style="display:flex; justify-content: space-between;">
            <h1>Users</h1>
            <form action="/searchUser" class="d-flex mt-3" method="post" style="height:40px ;">
                <!-- style="display:flex ; justify-content: space-between;" -->
                <div class="input-group">
                    <input class="form-control" type="text" name="name" placeholder="Search...">
        
                    <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
    
                </div>
            </form>
        </div>
        <div class="card-body">
            <!-- table with all the users -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">PhoneNumber</th>
                        <th scope="col">Role</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, i) => { %>
                    <tr>
                        <th scope="row"><%= i+1 %></th>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phoneNumber %></td>
                        <td><% if(user.isAdmin){ %>
                            <p>Admin</p>
                      <%  }else { %>
                            <p>customer</p>
                       <% } %>
                    </td>
                        <td class="d-flex">
                            <form action="/getUser" class="mr-2" method="post">
                                <input type="hidden" name="id" value="<%= user._id %>">
                                <button class="btn btn-primary " type="submit">Edit</a>
                            </form>
                            <form action="/deleteUser" method="post" class="ml-2">
                                <input type="hidden" name="id" value="<%= user._id %>">
                                <button class="btn btn-danger" type="submit">Del</a>
                            </form>
                         
                        </td>
                    </tr>
                    <% }) %>

                </tbody>
        </div>
       </div>
    </div>

    
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AllRooms</title>
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.7/css/all.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<link href="../App.css" rel="stylesheet" >
</head>
<body>
<div class="card">
    <div class="card-header" style="display:flex; justify-content: space-between;">
        <h1>Room Categories</h1>
        <!-- <a href="/admin" class="btn btn-primary"></a> -->

        <form action="/roomCategory/searchRooms" method="post" class="d-flex mt-3" style="height:40px ;">
            <!-- style="display:flex ; justify-content: space-between;" -->
            <div class="input-group">
                <input class="form-control" type="text" name="roomType" placeholder="Search...roomType">
    
                <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>

            </div>
        </form>
    </div>
    <div class="card-body">
      
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Room Type</th>
                    <th scope="col">Room Number</th>
                    <th scope="col">Room Price</th>
                    <th scope="col">Room Status</th>
                    <th scope="col">Room Description</th>
                    <th scope="col">Room Image</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(let room of rooms){ %>
                <tr>
                    <td><%= room.roomType %></td>
                    <td><%= room.roomNumber %></td>
                    <td><%= room.roomPrice %></td>
                    <td><%= room.roomStatus %></td>
                    <td><%= room.roomDescription.substr(0, 50)+'...' %></td>
                    <td><img src="<%= `/uploadedImages/${room.roomImage[0]}` %>" class="imd-fluid" width="100" height="100" /></td>
                    <td class="d-flex">
                        <form action="/roomCategory/getSingleCat" method="post">
                            <input type="hidden" name="id" value="<%= room._id %>">
                            <button class="btn btn-primary" type="submit">Edit</a>
                        </form>
                        <form action="/roomCategory/deleteRoomCategory" method="post">
                            <input type="hidden" name="id" value="<%= room._id %>">
                            <button class="btn btn-danger" type="submit"><i class="fa fa-trash"></i></a>
                        </form>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>

    </div>
</div>
 

    
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Allrooms</title>
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.7/css/all.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<link href="/css/App.css" rel="stylesheet" >
</head>
<body>
    <!-- <iframe id="HtmlIFrame" src="./Navbar.html" style="width:100vw ; display: grid;place-items: center;overflow: hidden;"  seamless></iframe>
     -->
     <%- include('Navbar') %>
    <header class="roomsHero">
        <div class="banner">
        <h1>Our Listings</h1>
        <div> </div>
       
       <a href="https://www.youtube.com/watch?v=I2UBjN5ER4s" class="btn-primary">Return home</a>
      </div>
         
    </header>
    <section class="filter-container">
        <div class="section-title">
                <h4>Search Rooms</h4>
            <div> </div>
              </div>
        <form class="filter-form" method="post" action="/roomCategory/filterRooms">
          
          <div class="form-group">
            <label for="type">room type</label>
            <select
              name="roomType"
              id="roomType"
              class="form-control"
            >
              <option value="All">all</option>
               <% for (let i = 0; i < roomTypes.length; i++) { %>
              <option value="<%= roomTypes[i].roomType %>"><%= roomTypes[i].roomType %></option>
              <% } %>
            </select>
          </div>
        
          <div class="form-group">
            <label for="roomCapacity">Guests</label>
            <select
              name="roomCapacity"
              id="roomCapacity"
              class="form-control"
              
            >
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
            </select>
          </div>
          
          <div class="form-group">
            <label for="price">room price</label>
            <input
              type="number"
              name="roomPrice"
              
              id="roomPrice"
              value=""
              class="form-control"
            />
          </div>
         
          <div class="form-group">
            <label for="price">room size </label>
            <div class="size-inputs">
              <input
                type="number"
                name="roomSize"
                value=""
                
                class="form-control"
              />
              
            </div>
          </div>
         
        
          <input type="submit" value="search" class="btn-primary mt-3" />
         
        </form>
      </section>
      <!-- all the rooms section -->

      <section class="roomslist">
        <div class="roomslist-center">
          <% rooms.forEach(function(room){ %>
          <article class="room">
            <div class="img-container">
              <img src="<%= `/uploadedImages/${room.roomImage[0]}` %>" alt="single room" />
              <div class="price-top">
                <h6>$<%= room.roomPrice %></h6>
                <p>per night</p>
              </div>
              <a href="<%= `/roomCategory/getRoomCategory/${room.id}` %>" class="btn-primary room-link">
                Features
              </a>
            </div>
            <p class="room-info"><%= room.roomType %></p>
          </article>
          <% }); %>

           
        </div>
      </section>

      <%- include('Footer') %>
      <!-- <iframe id="HtmlIFrame" src="./Footer.html" style="width:100vw ; height: 35vh; "  seamless></iframe> -->

    
</body>
</html>
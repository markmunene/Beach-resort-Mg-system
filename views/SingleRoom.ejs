<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>singleRoom</title>
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.7/css/all.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<link href="/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">

<link rel="stylesheet" href="css/App.css" type="text/stylesheet">

<style>
    
</style>

</head>
<body>
    <!-- <iframe id="HtmlIFrame" src="./Navbar.html" style="width:100vw ; display: grid;place-items: center;overflow: hidden;"  seamless></iframe>
     -->
     <%- include('Navbar') %>
    <header class="roomsHero">
        <div class="banner">
        <h1><%= room.roomType %> </h1>
        <div> </div>
       
       <a href="/" class="btn-primary">Return home</a>
      </div>
         
    </header>
    
            <section class="single-room">
                <div class="">
                <div class="owl-carousel single-room-slider">
                    <% for(let i=0; i<room.roomImage.length; i++){ %>
                    <img  src="<%= `/uploadedImages/${room.roomImage[i]}` %>" class ="m-4 img-fluid"  alt="{name}" />
                    
                    <% } %>

                </div>
        
                </div>
                <div class="row container">
                    <div class="col-md-8">
                        <div class="single-room-info">
                            <div class="row">
                                <div class="col-md-8">

                                    <article class="info">
                                      <h3>info</h3>
                                      <h6>price : <%= room.roomPrice %></h6>
                                      <h6>size : <%= room?.roomSize %> SQFT</h6>
                                      <h6>
                                        max capacity :<%= room?.roomCapacity %> people
                                      </h6>
                                      <h6><% if(room.petsAllowed){ %>
                                            <span>pets allowed</span>
                                     <% } else{ %>
                                            <span>pets not allowed</span>
                                        <% } %>
                                    </h6>
                                      <h6>breakfast included</h6>
                                    </article>
                                </div>
                                <div class="col-md-12 ml-5">
                                    <article class="desc">
                                          <h3>details</h3>
                                          <p><%= room?.roomDescription %></p>
                                    </article>


                                </div>
                              
                            </div>
                        </div>

                    </div>
                    <div class="col-md-4 ">
                        <!-- booking form -->
                        <section class="booking mt-5">
                            <div class="card">
                                <div class="card-header">
            
                                    <h3 class="text-center mt-2">book now $<%= room.roomPrice %></h3>
                                </div>
                            </div>
                            <div class="card-body">
                                <!-- check if the user is login in  -->
                                <% if(user != undefined){ %>    
                                <form action="/reservation" method="post" class="booking-form">
                                  <div class="form-group">
                                    <label for="checkin">checkin</label>
                                    <input type="date" name="checkIn" id="checkIn" class="form-control" placeholder=""/>
                                    </div>
                                    <input type ="hidden" name ="RoomCategoryId" id ="RoomCategoryId" value="<%= room.id %>" />
                                    <input type ="hidden" name ="roomType" id ="roomType" value="<%= room.roomType %>" />
                                    <input type ="hidden" name ="price" id ="price" value="<%= room.roomPrice %>" />

                                    <div class="form-group">
                                        <label for="checkin">Checkout</label>
                                        <input type="date" name="checkOut" id="checkOut" class="form-control" placeholder=""/>
                                        </div>
                                   
                                      <div class="form-group">
                                          <label for="noOfRooms">number of rooms</label>
                                          <input type="number" name="noOfRooms" id="noOfRooms" class="form-control" value="1" placeholder=""/>
                                          </div>
                  
                                          <button type="submit" class="btn-primary w-100 mt-3">submit</button>
                  
                  
                                      </form>
                                        <% } else{ %>
                                            <div class="alert alert-danger">
                                                <h5>you need to login to book a room</h5>
                                                <div class="center-Staff mt-3">

                                                    <a href="/login" class="btn-primary">login</a>
                                                </div>
                                            </div>
                                        <% } %>
                            </div>
                                </section>
                    </div>
                </div>
              </section>
        
       

   

   
      <section class="room-extras">
        <h6>extras </h6>
        <ul class="extras">
            <li>-Plush pillows and breathable bed linens</li>
            <li>-Complimentary refreshments</li>
            <li>-Adequate safety/security</li>
            <li>-Internet</li>
            <li>-Comfortable beds</li>
        </ul>
      </section>

        <%- include('Footer') %>
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/owl.carousel/owl.carousel.min.js"></script>
<script src="/js/Main.js" type="text/javascript"></script>



    
</body>
</html>